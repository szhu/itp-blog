// The Arduino VS Code extension generates most of this automatically.
// To use manually, replace $HOME with actual home directory!
{
  "configurations": [
    {
      "name": "Mac",
      "includePath": [
        "$HOME/Library/Arduino15/packages/arduino/tools/**",
        "$HOME/Library/Arduino15/packages/arduino/hardware/samd/1.8.8/**"
      ],
      "forcedInclude": [
        "$HOME/Library/Arduino15/packages/arduino/hardware/samd/1.8.8/cores/arduino/Arduino.h"
      ],
      "macFrameworkPath": ["/System/Library/Frameworks", "/Library/Frameworks"],
      "intelliSenseMode": "clang-x64",
      "compilerPath": "/usr/bin/clang",
      "cStandard": "c11",
      "cppStandard": "c++17",
      // https://github.com/microsoft/vscode-arduino/issues/808#issuecomment-490417186
      "defines": ["USBCON"]
    }
  ],
  "version": 4
}
